                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="35" Width="60"  
                                  Background="#f8f8f8" 
                           BorderBrush="#737373"       BorderThickness="0" 
                            FontFamily="{StaticResource Font-cairo-light}"   
                             Grid.Row="2"  >
                            <ListBoxItem>
                                +963
                            </ListBoxItem>
                            <ListBoxItem>
                                +961
                            </ListBoxItem>
                            <ListBoxItem>
                                +966
                            </ListBoxItem>
                            <ListBoxItem>
