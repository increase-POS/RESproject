                            </ListBoxItem>
                        </ComboBox>
                        <Border Grid.Row="0" Height="40" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                            <Grid>



                            </Grid>
                        </Border>
                        <ComboBox x:Name="cb_areaFaxLocal" Padding="10,0,5,0" TextBlock.Foreground="#4E4E4E"
                            SelectedIndex="0"
                           TextBlock.FontSize="12" Margin="10,5,5,5"
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="35" Width="60"  Grid.Column="1"
                                  Background="#f8f8f8"  
                           BorderBrush="#737373"       BorderThickness="0" 
                            FontFamily="{StaticResource Font-cairo-light}"  >
                            <ListBoxItem>
                                011
                            </ListBoxItem>
                            <ListBoxItem>
                                021
                            </ListBoxItem>
                            <ListBoxItem>
                                021
                            </ListBoxItem>
                            <ListBoxItem>
                                041
                            </ListBoxItem>
                        </ComboBox>
                        <Border Grid.Row="0" Height="40" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
