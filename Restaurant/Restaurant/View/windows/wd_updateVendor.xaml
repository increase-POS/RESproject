                              Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                    <Path.ToolTip>
                                        <ToolTip x:Name="tt_errorMobile" Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                    </Path.ToolTip>
                                </Path>


                            </Grid>
                        </Border>

                       


                    </Grid>


                    <Grid  Grid.Column="1" Grid.Row="2"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Height="40" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                            <Grid>
                                <ComboBox x:Name="cb_areaPhone" Padding="10,0,5,0" TextBlock.Foreground="#4E4E4E"
                            SelectedIndex="0"  Grid.Column="0"
                                  BorderBrush="#737373"   BorderThickness="0" Margin="4,0"
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="35" Width="60"   
                            FontFamily="{StaticResource Font-cairo-light}"   
                             Grid.Row="2"  >
                                    <ListBoxItem>
                                        +963
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        +961
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        +966
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        +950
                                    </ListBoxItem>
                                </ComboBox>
                            </Grid>
                        </Border>

                         <Border Grid.Row="0" Grid.Column="1" Height="40" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                            <Grid>

                                <ComboBox x:Name="cb_areaPhoneLocal" Padding="10,0,5,0" 
                                          TextBlock.Foreground="#4E4E4E"
                            SelectedIndex="0"
                                          BorderBrush="#737373"   BorderThickness="0" Margin="4,0"
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="35" Width="60"  Grid.Column="1"
