                                    <ListBoxItem>
                                        +961
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        +966
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        +950
                                    </ListBoxItem>
                                </ComboBox>


                            </Grid>
                        </Border>

                      

                        <Border Grid.Column="1" Height="40" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                            <Grid>

                                <TextBox x:Name="tb_mobile"  Text="{Binding mobile, Mode=OneWay}"  Padding="10,0,5,0" 
