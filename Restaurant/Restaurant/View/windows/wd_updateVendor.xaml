                            <ImageBrush Stretch="UniformToFill"  x:Name="IMG_customer"
                                            ImageSource="/pic/no-image-icon-125x125.png"   />
                        </Button.Background>
                    </Button>


                    <Border Grid.Row="2" Height="40" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
