                                </Path.ToolTip>
                            </Path>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" Height="40" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                        <Grid>
                                <TextBlock x:Name="tb_code"  Text="{Binding code, Mode=OneWay}" Padding="10,0,5,0" 
                                     materialDesign:HintAssist.Hint="Code..."  
